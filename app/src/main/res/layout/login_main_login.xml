<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splashbackground"
    tools:context="com.deokjilmate.www.deokjilmate.Login.MainLoginActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/splash_full"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"/>


        <ImageView
            android:layout_width="104dp"
            android:layout_height="104dp"
            android:layout_gravity="center"
            android:id="@+id/MainLogin_background"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"/>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="56dp"
        android:text="Login"
        android:id="@+id/MainLogin_login"
        android:layout_above="@+id/MainLogin_sign"
        android:layout_marginBottom="8dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/main_login_button_style">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:id="@+id/MainLogin_loginBtn"
            android:layout_centerInParent="true"/>
        </RelativeLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="56dp"
        android:text="회원가입"
        android:background="@drawable/main_login_button_style"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="48dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/MainLogin_sign">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:id="@+id/MainLogin_signBtn"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

</RelativeLayout>
