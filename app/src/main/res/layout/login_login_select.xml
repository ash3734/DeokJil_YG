<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login_select"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.deokjilmate.www.deokjilmate.Login.LoginSelectActivity"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/tw__solid_white">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/maingradation">
            <ImageButton
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:background="@drawable/topbar_back"
                android:id="@+id/LoginSelect_backImage"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="로그인"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="68dp"
            >
            <Button
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_toLeftOf="@+id/LoginSelect_twitter"
                android:id="@+id/LoginSelect_facebook"
                android:onClick="onLoginButtonClick"
                android:background="@drawable/login_fb"
                />

            <Button
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginLeft="8dp"
                android:id="@+id/LoginSelect_twitter"
                android:layout_centerInParent="true"
                android:onClick="onLoginButtonClick"
                android:background="@drawable/login_tw"
                />

            <Button
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/LoginSelect_twitter"
                android:id="@+id/LoginSelect_google"
                android:onClick="onLoginButtonClick"
                android:background="@drawable/login_g"/>

        </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <View
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#8A000000"
            android:layout_toLeftOf="@+id/Sign_or"
            android:layout_marginLeft="24dp"
            />
        <TextView
            android:id="@+id/Sign_or"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_centerInParent="true"
            android:textColor="#8A000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="or"
            android:includeFontPadding="false"
            android:textSize="16dp"
            android:textAlignment="center"/>
        <View
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#8A000000"
            android:layout_toRightOf="@+id/Sign_or"
            android:layout_marginRight="24dp"
            />


    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:paddingLeft="8dp"
            android:textColor="#8A000000"
            android:includeFontPadding="false"
            android:id="@+id/LoginSelect_email"
            android:background="@drawable/edit_text_background"
            android:hint="메일주소"
            android:textColorHint="#8A000000"
            android:textSize="16dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:textColor="#8A000000"
            android:paddingLeft="8dp"
            android:background="@drawable/edit_text_background"
            android:layout_marginTop="8dp"
            android:id="@+id/LoginSelect_pwd"
            android:hint="비밀번호"
            android:includeFontPadding="false"
            android:textColorHint="#8A000000"
            android:textSize="16dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/login_signin"
            android:id="@+id/LoginSelect_toSign"
            android:layout_marginLeft="24dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/login_findpw"
                android:layout_alignParentRight="true"
                android:id="@+id/LoginSelect_toFindPwd"
                android:layout_marginRight="24dp"/>

        </RelativeLayout>
    </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <Button
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:background="@drawable/sing_login_check_button"
        android:id="@+id/LoginSelect_customLogin"
        android:textStyle="bold"
        android:text="로그인하기" />
        </RelativeLayout>

</LinearLayout>
