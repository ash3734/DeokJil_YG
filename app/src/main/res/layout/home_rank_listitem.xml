<?xml version="1.0" encoding="utf-8"?>
<!--홈화면 사전선호도 리스트 아이템 레이아웃-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp">
    <ImageView
        android:id="@+id/home_list_iamgeview_chart"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/gather_spread"
        />
    <TextView
        android:id="@+id/home_list_textview_rank"
        android:text="1위"
        android:layout_marginLeft="2dp"
        android:layout_centerInParent="true"
        android:textSize="16sp"
        android:textColor="@color/darkgrey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/home_list_iamgeview_updown"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerInParent="true"
        android:src="@drawable/gather_fold"/>
</RelativeLayout>