<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/MyPage_mainBar">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/sub_singers_frame">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginRight="4dp"
            android:id="@+id/MyPage_mainSingerBackground"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:layout_centerInParent="true">
            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="26dp"
                >
            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/mypage_singer_frame"
                android:id="@+id/MyPageRecycle_SingerImage"
                />
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="#de000000"
                android:textSize="16dp"
                android:id="@+id/MyPageRecycle_singerName"
                android:text="twice"
                android:includeFontPadding="false"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:id="@+id/MyPageRecycle_rank"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:text="투표 | "
                    android:textColor="#8a000000"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/MyPageRecycle_vote"
                    android:includeFontPadding="false"
                    android:layout_toRightOf="@+id/MyPageRecycle_rank"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:text="123123"
                    android:textColor="#8a000000"
                    android:id="@+id/MyPageRecycle_voteCount"
                    android:includeFontPadding="false"
                    android:layout_toRightOf="@+id/MyPageRecycle_vote"/>
            </RelativeLayout>
        </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>