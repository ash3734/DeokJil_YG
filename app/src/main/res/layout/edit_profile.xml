<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_edit_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80ffcd54"

    tools:context="com.deokjilmate.www.deokjilmate.Login.SetProfileActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:id="@+id/EditProfile_top"
        android:background="@drawable/maingradation">
        <ImageButton
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/topbar_check"
            android:layout_alignParentRight="true"
            android:id="@+id/EditProfile_save"/>
        <ImageButton
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/topbar_back"
            android:id="@+id/EditProfile_backImage"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/tw__solid_white"
            android:includeFontPadding="false"
            android:text="프로필 수정"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
        android:id="@+id/editProfile_centerView"
        />
        <RelativeLayout
            android:layout_width="152dp"
            android:layout_height="152dp"
            android:layout_above="@+id/editProfile_centerView"
            android:layout_centerHorizontal="true"
            android:id="@+id/editProfile_Images"
            >
        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="152dp"
            android:layout_height="152dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/editProfile_profileImage"
            android:src="@drawable/profile_default"
            app:civ_border="true"
            app:civ_border_color="#ff7d8f"
            />

        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/editProfile_select"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/profile_change"
            />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@drawable/border_circle_background"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/editProfile_Images"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="30dp" />
            <EditText
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:hint="닉네임"
                android:textSize="15dp"
                android:textColorHint="#9d9e9e"
                android:id="@+id/editPorfile_nickname"
                android:gravity="center"
                android:includeFontPadding="false"
                android:background="@null"/>

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>
