<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mypage_add_singer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.deokjilmate.www.deokjilmate.MyPage.AddSinger.AddSingerActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@drawable/maingradation"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <ImageButton
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:background="@color/tw__transparent"
            android:id="@+id/MyPage_AddSinger_backImage"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#ffffff"
            android:includeFontPadding="false"
            android:text="내 가수 추가"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:paddingLeft="8dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/addgasu_search"
            android:layout_weight="1"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/MyPage_AddSinger_search"
            android:layout_gravity="center_vertical"
            android:background="@color/tw__transparent"
            android:maxLines="1"
            android:includeFontPadding="false"
            android:hint="가수 이름을 입력하세요"
            android:layout_weight="8"
            />
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:paddingRight="8dp"
            android:layout_weight="1"
            android:background="@drawable/addgasu_x"
            android:visibility="invisible"
            android:id="@+id/MyPage_AddSinger_clear"
            />
    </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@drawable/shadow_gradation"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/MyPage_AddSinger_favoriteText"
            android:text="인기가수"/>
        <android.support.v7.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/MyPage_AddSinger_recycle">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>



</LinearLayout>
