<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="432dp"
    tools:context="com.deokjilmate.www.deokjilmate.MyPage.RankDialog"
    android:background="@drawable/rank_dialog_background"
    android:layout_gravity="center"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="36dp"
            android:textAlignment="center"
            android:layout_centerInParent="true"
            android:includeFontPadding="false"
            android:text="뱃지"/>
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/badge_x"
            android:layout_alignParentRight="true"
            android:id="@+id/Ranking_close_dialog"/>

        
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#48000000"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginTop="92dp"
        android:layout_marginLeft="46dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/badge_muggle"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:text="머글"
            android:textSize="16dp"
            android:textColor="#87000000"
            android:includeFontPadding="false"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:text="투표 수 10번 미만"
            android:textSize="16dp"
            android:textColor="#8A000000"
            android:includeFontPadding="false"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="46dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/badge_newbie"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:text="뉴비"
            android:textSize="16dp"
            android:textColor="#87000000"
            android:includeFontPadding="false"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:text="투표 수 10번 이상"
            android:textSize="16dp"
            android:textColor="#8A000000"
            android:includeFontPadding="false"
            />
    </LinearLayout>


    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="24dp"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="46dp"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/badge_ilco"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:text="일코"
        android:textSize="16dp"
        android:textColor="#87000000"
        android:includeFontPadding="false"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:text="투표 수 100번 이상"
        android:textSize="16dp"
        android:textColor="#8A000000"
        android:includeFontPadding="false"
        />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="46dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/badge_duckwho"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:text="덕후"
            android:textSize="16dp"
            android:textColor="#87000000"
            android:includeFontPadding="false"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:text="투표 수 500번 이상"
            android:textSize="16dp"
            android:textColor="#8A000000"
            android:includeFontPadding="false"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="46dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/badge_sungduck"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:text="성덕"
            android:textSize="16dp"
            android:textColor="#87000000"
            android:includeFontPadding="false"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:text="투표 수 1000번 이상"
            android:textSize="16dp"
            android:textColor="#8A000000"
            android:includeFontPadding="false"
            />
    </LinearLayout>

</LinearLayout>
