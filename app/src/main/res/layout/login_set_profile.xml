<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_set_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.deokjilmate.www.deokjilmate.Login.SetProfileActivity"
    android:orientation="vertical"
    android:background="@drawable/maingradation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/splash_full"
        >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@color/tw__solid_white"
            android:alpha="0.3">
        </RelativeLayout>
        <ImageButton
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/topbar_back"
            android:id="@+id/SetProfile_backImage"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="프로필 설정"/>

    </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/sign_steps_context"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/mypagemain_background_ImageView_Id" />


        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="151dp"
            android:layout_height="151dp"
            android:layout_marginTop="100dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/SetProfile_profileImage"
            android:src="@drawable/profile_default"
            app:civ_border="true"
            app:civ_border_color="#ff7d8f"
            />


        <ImageButton
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:id="@+id/SetProfile_select"
            android:layout_alignParentRight="true"
            android:background="@drawable/profile_change"
            android:layout_marginTop="216dp"
            android:layout_marginRight="102dp"
            />

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:background="@drawable/border_circle_background"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/SetProfile_profileImage"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="30dp" />
            <EditText
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:hint="닉네임"
                android:textSize="15dp"
                android:textColorHint="#9d9e9e"
                android:id="@+id/nickname"
                android:gravity="center"
                android:background="@null"/>

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/sing_login_check_button"
            android:text="다음 단계로"
            android:id="@+id/SetProfile_next"/>
    </RelativeLayout>
        </LinearLayout>

            <ImageView
                android:id="@+id/Sign_progress_first"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginBottom="26dp"
                android:layout_marginRight="6dp"
                android:layout_toLeftOf="@+id/Sign_progress_second"
                android:layout_alignParentBottom="true"
                android:src="@drawable/circle_empty"/>
            <ImageView
                android:id="@+id/Sign_progress_second"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginBottom="26dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/circle_full"/>

            <ImageView
                android:id="@+id/Sign_progress_third"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@+id/Sign_progress_second"
                android:layout_marginBottom="26dp"
                android:layout_alignParentBottom="true"
                android:src="@drawable/circle_empty"/>


        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
