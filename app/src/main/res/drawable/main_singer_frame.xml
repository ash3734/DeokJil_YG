<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <!-- main_singer_frame (밑으로) : 그림자 -->
            <item android:top="4dp">
                <shape>
                    <corners android:radius="6dp" />
                    <solid android:color="#898989" />
                </shape>
            </item>

            <!-- background (위로) -->
            <item android:bottom="4dp" android:top="8dp" android:left="4dp" android:right="4dp">
                <shape>
                    <corners android:radius="6dp" />
                    <solid android:color="#ffffff" />
                    <stroke android:width="2dp" android:color="#ff7973" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>

